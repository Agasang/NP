<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lsb.myapplicationw2.Calculation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목 :" />

            <TextView
                android:id="@+id/calcul_title_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제목 표시 텍스트" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금액 :" />

            <TextView
                android:id="@+id/calcul_maxmoney_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 금액 표시 텍스트" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총원 :" />

            <TextView
                android:id="@+id/calcul_peoplenum_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 원 표시 텍스트" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 사람당 금액은" />

            <com.lsb.myapplicationw2.EditNumber
                android:id="@+id/edit_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="총 금액"
                android:inputType="number"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/calcul_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="한 사람당 금액 표시 텍스트" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/add_all_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/button_calc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickButton"
                android:text="계산" />


            <Button
                android:id="@+id/button_ok"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="onClickButton"
                android:text="확인" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>

